<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>
<% if current_user.id == @user.id %>
    <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーのお悩み一覧</h2>
<% @user.talks.each do |t| %>
    <%= t.user.name %>
    <%= t.body %>
<% end %>

<!-- 以下は共感機能を実装している場合-->
<h2>ユーザーが共感した投稿一覧</h2>
<% @user.empathied_talks.each do |t| %>
    <%= t.user.name %>
    <%= t.body %>
<% end %>

<%= link_to "お悩み一覧に戻る", talks_path %>